{
    "name": "matesofmate/self-review-extension",
    "description": "Human-in-the-loop code review extension for symfony/ai-mate",
    "type": "symfony-ai-mate",
    "license": "MIT",
    "keywords": [
        "code-review",
        "ai-mate",
        "mcp",
        "human-in-the-loop",
        "git",
        "diff",
        "symfony",
        "ai"
    ],
    "authors": [
        {
            "name": "Johannes Wachter",
            "email": "johannes@sulu.io"
        }
    ],
    "require": {
        "php": ">=8.2",
        "ext-pdo_sqlite": "*",
        "helgesverre/toon": "^1.0",
        "symfony/ai-mate": "^0.1 || ^0.2@dev",
        "symfony/console": "^5.4|^6.4|^7.3|^8.0",
        "symfony/process": "^5.4|^6.4|^7.3|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "rector/rector": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "MatesOfMate\\SelfReviewExtension\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MatesOfMate\\SelfReviewExtension\\Tests\\": "tests/",
            "App\\Mate\\": "mate/src/"
        }
    },
    "bin": [
        "bin/self-review"
    ],
    "extra": {
        "ai-mate": {
            "scan-dirs": [
                "src/Capability"
            ],
            "includes": [
                "config/config.php"
            ]
        },
        "branch-alias": {
            "dev-main": "0.1.x-dev"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "lint": [
            "@composer validate --strict",
            "vendor/bin/rector process --dry-run",
            "vendor/bin/php-cs-fixer fix --dry-run --diff",
            "vendor/bin/phpstan analyse"
        ],
        "fix": [
            "vendor/bin/rector process",
            "vendor/bin/php-cs-fixer fix"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
